[user]
  name = Philipp Millar
  email = philipp.millar@poxar.net

[github]
  user = poxar

[status]
  short = true
  branch = true

[branch]
  sort = -committerdate

[column]
  ui = auto

[rerere]
  enabled = true
  autoupdate = true

[merge]
  conflictStyle = zdiff3
  keepBackup = false
  tool = nvimdiff

[rebase]
  autoStash = true
  autoSquash = true
  updateRefs = true
  missingCommitsCheck = error

[diff]
  renames = true
  colorMoved = plain
  algorithm = histogram
  indentHeuristic = true
  mnemonicPrefix = true
  tool = nvimdiff

[init]
  defaultBranch = main

[pull]
  rebase = true

[push]
  autoSetupRemote = true
  followTags = true

[commit]
  verbose = true

[fetch]
  parallel = 0
  writeCommitGraph = true
  prune = true
  pruneTags = true
  all = true

[alias]
  l = log --pretty=oneline --abbrev-commit --max-count=15 --decorate=auto
  ll = log --pretty=oneline --abbrev-commit --decorate=auto
  ls = ls-files
  pub = push -u origin
  undo = reset --soft HEAD~1
  all = !git add -A && git commit
  new = !sh -c 'git log --pretty=oneline --decorate=auto $1@{1}..$1@{0} "$@"'
  prune-all = !git remote | xargs -n 1 git remote prune

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[tag]
  sort = version:refname

[pager]
  difftool = true

[diff]
  tool = difftastic

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$MERGED" "$LOCAL" "abcdef1" "100644" "$REMOTE" "abcdef2" "100644"
