#!/bin/sh
set -eu

SESSION="$(basename "$PWD")"

if ! tmux has-session -t "$SESSION" 2>/dev/null; then
  tmux new-session -dc "$PWD" -s "$SESSION"
  if test -x ./tmux.sh; then
    ./tmux.sh "$SESSION"
  elif test -x ./.tmux.sh; then
    ./.tmux.sh "$SESSION"
  fi
fi

tmux switch-client -t "$SESSION"
