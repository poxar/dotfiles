(defpoll time :interval "10s" `date "+%H:%M"`)
(defpoll date :interval "10s" `date "+%e. %B"`)

(defwidget time []
  (box
    :orientation "v"
    :spacing -35
    (label :xalign 1 :markup "<span size=\"240%\">${time}</span>")
    (label :xalign 1 :text "${date}")))

(defwindow time
  :monitor 0
  :stacking "bg"
  :geometry (geometry :x "32px" :y "12px" :width "500px" :anchor "top right")
  (time))
