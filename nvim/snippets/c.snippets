snippet fn
	${1:void} ${2:name}(${3})
	{
		${4}
	}
snippet for
	for (int ${1:i} = 0; $1 < ${2:condition}; ++$1) {
		${3}
	}
snippet inc
	#include <${1:stdio}.h>
snippet Inc
	#include "${1:`expand('%:t:r')`.h}"
snippet once
	#ifndef ${1:`substitute(toupper(expand('%:t')), '\.', '_', 'g')`}
	#define $1

	${0}

	#endif /* $1 */
