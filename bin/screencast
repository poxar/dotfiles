#!/bin/sh
set -eu

dir="$HOME/Videos/screencasts"
current=$(date +%F_%H-%M-%S)

mkdir -p "$dir"

hacksaw --colour '#e3bcb5' -s 4 -g 2 -n | {
    IFS=+x read -r w h x y

    w=$((w + w % 2))
    h=$((h + h % 2))

    ffmpeg \
        -r 30            \
        -f x11grab       \
        -s "${w}x${h}"   \
        -i ":0.0+$x,$y"  \
        -preset slow     \
        -c:v h264        \
        -pix_fmt yuv420p \
        -crf 20          \
        "$dir/$current.mp4"
}
