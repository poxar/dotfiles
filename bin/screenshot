#!/bin/sh
set -eu

file="$HOME/Pictures/Screenshots/$(date '+%F_%H-%M-%S').png"
cmd="grim"

case "${1:-""}" in
  "sel")
    $cmd -g "$(slurp)" "$file"
    ;;
  "cur")
    win="$(hyprctl -j activewindow | jq -r '"\(.at[0]),\(.at[1]) \(.size[0])x\(.size[1])"')"
    $cmd -g "$win" "$file"
    ;;
  *)
    output="$(hyprctl -j activeworkspace | jq -r '.monitor')"
    $cmd -o "$output" "$file"
    ;;
esac

wl-copy --type image/png < "$file"

action="$(notify-send -i "$file" -A "default=Open screenshot" "Screenshot" "$file")"

if test "$action" = "default"; then
  ghostty -e lf "$file"
fi
