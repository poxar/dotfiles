#!/bin/sh
set -eu

icons="${XDG_CONFIG_HOME:-"$HOME/.config"}/dunst/icons"
synchint="string:x-canonical-private-synchronous"

notify_brightness() {
  brightness="$(brightnessctl get)"
  brightness="$(echo "$brightness/255*100" | bc -ql)"

  notify-send \
    -h "$synchint:brightness" \
    -h "int:value:$brightness" \
    -i "$icons/sun.png" \
    "Brightness"
}

notify_dnd() {
  if test "$(dunstctl is-paused)" = "true"; then
    dunstctl set-paused false
    notify-send \
      -h "$synchint:dnd" \
      "Do not disturb" \
      "disabled"
  else
    notify-send \
      -h "$synchint:dnd" \
      "Do not disturb" \
      "enabled"
    sleep 1
    dunstctl set-paused true
  fi
}

notify_mic() {
  if test "$(pamixer --default-source --get-mute)" = "true"; then
    notify-send \
      -h "$synchint:mic" \
      -i "$icons/mic-muted.png" \
      "Microphone" "muted"
  else
    notify-send \
      -h "$synchint:mic" \
      -i "$icons/mic.png" \
      "Microphone" "LIVE"
  fi
}

notify_volume() {
  if test "$(pamixer --get-mute)" = "true"; then
    notify-send \
      -h "$synchint:volume" \
      -i "$icons/audio-muted.png" \
      "Volume" \
      "muted"
  else
    notify-send \
      -h "$synchint:volume" \
      -h "int:value:$(pamixer --get-volume)" \
      -i "$icons/audio.png" \
      "Volume"
  fi
}

case "${1:-""}" in
  "brightness") notify_brightness ;;
  "dnd")        notify_dnd        ;;
  "mic")        notify_mic        ;;
  "volume")     notify_volume     ;;
  *) echo "No such command ${1:-""}" ;;
esac
