#!/bin/sh
set -eu

dconf load /org/gnome/settings-daemon/plugins/media-keys/custom-keybindings/ <<EOF
[custom0]
binding='<Super>s'
command='keyd do "M-c 500ms M-up find-session enter enter"'
name='Sessions'

[custom1]
binding='<Super>e'
command='ghostty -e find-emoji type'
name='Emoji Selector'

[custom2]
binding='<Super>v'
command='ghostty -e gnome-phrases type'
name='Snippet Selector'
EOF

dconf load /org/gnome/shell/keybindings/ <<EOF
[/]
focus-active-notification=@as []
toggle-message-tray=@as []
toggle-overview=['<Super>space']
toggle-quick-settings=@as []
EOF

dconf load /org/gnome/desktop/wm/keybindings/ <<EOF
[/]
close=['<Super>BackSpace']
panel-run-dialog=['<Shift><Super>space']
switch-input-source=@as []
switch-input-source-backward=@as []
EOF
